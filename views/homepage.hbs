<div class="sticky-top">
<header class="p-3 bg-dark text-white">
  <div class="">
    <div
      class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start"
    >

      <ul
        class="nav col-12 col-lg-auto me-lg-auto justify-content-center mb-md-0"
      >
        <li><a href="/" class="nav-link px-2 text-secondary">Home</a></li>
        <li><a href="#card" class="nav-link px-2 text-white">Cards</a></li>
        <li><a href="#list" class="nav-link px-2 text-white">List</a></li>
        <li><a href="#table" class="nav-link px-2 text-white">Table</a></li>
      </ul>

      <div class="dropdown">
        <a
          class="btn btn-secondary dropdown-toggle"
          href="#"
          role="button"
          id="dropdownMenuLink"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          {{#if user}}
            {{user}}
          {{else}}
            Account
          {{/if}}
        </a>

        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">

          {{#if user}}
            <li><a class="dropdown-item" href="/logout">Logout</a></li>
          {{else}}
            <li><a class="dropdown-item" href="/login">Login</a></li>
          {{/if}}

        </ul>
      </div>
    </div>
  </div>
</header>
</div>

<div class="d-flex h-100 text-center text-white bg-dark">

  <div class="cover-container d-flex p-3 mx-auto my-auto flex-column">
    <main class="px-3">
      <h1>Home Page</h1>
      <p class="lead">Cover is a one-page template for building simple and
        beautiful home pages. Download, edit the text, and add your own
        fullscreen background photo to make it your own.</p>
    </main>
  </div>
</div>

<div class="container bg-light row my-5 py-5 mx-auto">

  <h1 class="text-center my-5">Cards</h1>
  {{#each card}}
  <div class="card me-4" id="card" style="width: 15rem;">
    <img
      src="{{this.img}}"
      class="card-img-top pt-5 pb-3 px-3"
      alt="..."
    />
    <div class="card-body">
      <h5 class="card-title fs-4 text-secondary"> {{this.seriesName}} </h5>
      <p class="card-text"> <b>Storyline: </b> {{this.story}}</p>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><b>Rating: </b> {{this.rating}}</li>
        <li class="list-group-item"><b>Genere:</b> {{this.genere}}</li>
      </ul>
    </div>
  </div>
  {{/each}}
</div>


<div class="container bg-light row my-5 mx-auto">
  <div class="card my-5 mx-auto" style="width: 25rem;">
    <h1 class="text-center my-5" id="list">List</h1>
    <ul class="list-group list-group-flush">
      {{#each list}}
        <li class="list-group-item">{{this}}</li>
      {{/each}}
  </div>
</div>


<div class="container bg-light row my-5 mx-auto">
    <h1 class="text-center my-5" id="table">Table</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">SN</th>
      <th scope="col">Name</th>
      <th scope="col">Mark</th>
      <th scope="col">Percentage</th>
    </tr>
  </thead>
  <tbody>
    {{#each table}}
      <tr>
        <td>{{this.sn}}</td>
        <td>{{this.name}}</td>
        <td>{{this.mark}}</td>
        <td>{{this.percent}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>